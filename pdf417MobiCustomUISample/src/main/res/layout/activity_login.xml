<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "30dp"
    android:paddingRight = "30dp"
    android:paddingTop = "30dp"
    android:paddingBottom = "30dp" tools:context = ".LoginActivity">

    <TextView android:text = "Bienvenido" android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Censador"
        android:id = "@+id/textView"
        android:layout_below = "@+id/textview"
        android:layout_centerHorizontal = "true"
        android:textColor = "#ff7aff24"
        android:textSize = "35dp"
        android:layout_marginBottom ="16dp"/>

    <EditText
        android:id="@+id/edUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:hint="Usuario"
        android:textSize="22sp"
        android:minHeight="48dp"
        android:textColorHighlight="#F44336"
        android:textColorHint="#FFFFFF" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edUser"
        android:layout_alignEnd="@+id/edUser"
        android:layout_alignRight="@+id/edUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:textSize="22sp"
        android:hint="TelÃ©fono"
        android:minHeight="48dp"
        android:textColorHint="#FFFFFF"
        android:inputType="phone"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Guardar mis datos"
        android:layout_below="@+id/edPhone"
        android:layout_marginTop="30dp"
        android:gravity="center|center_horizontal"/>


</RelativeLayout>